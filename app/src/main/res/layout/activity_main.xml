<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="demo.klock.soccer.MainActivity">

    <demo.klock.soccer.view.SoccerView
        android:id="@+id/soccer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <demo.klock.soccer.view.BezierView
        android:id="@+id/bazier_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_soccer"
        android:src="@mipmap/img_soccer"
        android:visibility="invisible"
        android:layout_width="@dimen/soccer_size"
        android:layout_height="@dimen/soccer_size"/>

    <TextView
        android:id="@+id/tv_start"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="START"
        android:background="#aaccdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_ratio"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>